<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="bg-black">
    <ActionBar title="Barkod Okuyucu" class="bg-gray-900 text-white" />
    
    <StackLayout class="p-6">
        <Label text="{{ productInfo }}" class="text-lg text-white text-center p-4 mb-4" textWrap="true" />
        
        <Button text="Barkod Tara" tap="{{ onScanBarcode }}" 
                class="bg-pink-500 text-white font-bold py-4 rounded-lg mb-4" />
                
        <StackLayout class="bg-gray-800 rounded-lg p-4" visibility="{{ hasResult ? 'visible' : 'collapsed' }}">
            <Label text="Ürün Adı:" class="text-gray-400" />
            <Label text="{{ productName }}" class="text-white text-lg mb-2" />
            
            <Label text="Fiyat:" class="text-gray-400" />
            <Label text="{{ productPrice }}" class="text-white text-lg" />
        </StackLayout>
    </StackLayout>
</Page>